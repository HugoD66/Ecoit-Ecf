                    <li id="acceuilnav" class="nav-item col-sm p-2 m-4">
                        <a class="nav-link " href="{{ path('app_home') }}">Acceuil</a>
                    </li>
                    <li id="formationsnav" class="nav-item col-sm  p-2 m-4">
                        <a class="nav-link " href="{{ path('app_formation') }}">Liste des formations</a>
                    </li>
                    <li id="loginnav" class="nav-item col-sm p-2 m-4">
                            {% if  app.user is not null %}
                                <a class="nav-link " href="{{ path('app_logout') }}"> Se déconnecter</a>
                            {%  else %}
                                <a class="nav-link " href="{{ path('app_login') }}"> Se connecter</a>
                            {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    {% block body %}
    {% endblock %}
    <div class="footer">
        <div class="contact col-md-4 d-flex  justify-content-center mb-3 mb-md-0"><u>Nous contacter:</u></div>
        <div class="row">
            <section class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto">
                <a href="https://www.facebook.com/MetaFrance/?brand_redir=108824017345866" target="_blank">
                    <img class="btn btn-outline-light" src="{{ asset('image/facebook.svg') }}" alt="facebook">
                </a>
                <a href="https://github.com/HugoD66/Ecoit-Ecf/commits/main" target="_blank">
                    <img class="btn btn-outline-light" src="{{ asset('image/github.svg') }}" alt="git">
                </a>
                <a href="https://www.google.com" target="_blank">
                    <img class="btn btn-outline-light" src="{{ asset('image/google.svg') }}" alt="google">
                </a>
                <a href="https://www.instagram.com/?hl=fr" target="_blank">
                    <img class="btn btn-outline-light" src="{{ asset('image/instagram.svg') }}" alt="insta">
                </a>

            </section>
        </div>
    </div>
</div>
