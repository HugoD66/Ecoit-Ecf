                <button class="button" type="button"><span></span><a href="{{ url('app_quizz_user') }}">Quizz!</a></button>
            {%  else %}
            {% endif %}
        </div>
        <div class="col" id="reglage-buttons">
            <button class="button" type="button"><span></span><a href="{{ url('app_formation') }}">Liste des formations</a></button>
