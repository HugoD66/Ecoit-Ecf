{% block body %}
    <form method="post">
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <div class="titre-formation"><h1>{{ title }}</h1></div>
        <div class="connexion-form" id="seconnecter">
            <label for="inputUsername">Username</label>
            <input type="text" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
            <label for="inputEmail">Email</label>
            <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Exemple@exemple.com">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Entrez votre mot de passe ici">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <input class="form-check-input " type="radio" name="agreeTerms" id="agreeTerms">
            <label class="form-check-label save"  for="agreeTerms">
                J'acceptes les termes        </label>
            <button class="button" type="submit" id="enregistrement">Connexion</button>
        </div>
    </form>
{% endblock %}













































