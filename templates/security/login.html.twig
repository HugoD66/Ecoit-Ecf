{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="titre-formation"><h1>{{ title }}</h1></div>
        <div class="connexion-form" id="seconnecter">
            <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Exemple@exemple.com">
            <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Entrez votre mot de passe ici">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="button" type="submit" id="enregistrement">Connexion</button>
        </div>
</form>
{% endblock %}
